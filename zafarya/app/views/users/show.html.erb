<div class="row text-center">
	<div class="col-md-3">
	
		<div class="panel panel-default top-marg">
		    <div class="panel-heading">Verification</div>	
			<div class="panel-body">
			    <%= image_tag avatar_url(@user), class: "avatar-large" %>
			    <div class="row text-center top-marg">
			        Email Address <%= @user.email%>    
			    </div>
				<div class="row text-center top-marg">
				    Phone Number: <%=@user.phone_number %>    
				</div>
				
			</div>
		</div>
	</div>

	<div class="col-md-9">
		<h2><%= @user.fullname %></h2>

		<div class="description row-space-3">
			<%= @user.description %>
		</div>
		
		<h4>Listings (<%= @adventures.length %>)</h4><br>

		<div class="row">
			
			<% @adventures.each do |adventure| %>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag adventure.photos[0].image.url(:medium) %>
						</div>
						<div class="panel-body">
							<%= link_to adventure.activity_name, adventure %>
						</div>
					</div>
				</div>
			<% end %>

		</div>
		
		
		<h4>Reviews</h4>

		<% @adventures.each do |adventure| %>
			<% if !adventure.reviews.blank? %>

				<% adventure.reviews.each do |review| %>
					<div class="row">
						<div class="col-md-2 text-center">
							<%= image_tag avatar_url(review.user), class: "img-circle avatar-medium" %><br>
							<%= review.user.fullname %>
						</div>
						<div class="col-md-10">
							<%= link_to adventure.activity_name, adventure %><br>
							<%= review.comment %><br>
							<%= review.created_at.strftime("%v") %>
						</div>
					</div>
				<% end %>

			<% end %>
		<% end %>
		
	</div>
</div>