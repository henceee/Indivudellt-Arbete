<div class="col-md-12">
            
    <div id="map"></div>
   
   <!-- Move to external CSS-->            
      <style>
      #map {
      width: 100%;
      height: 400px;
      }
      </style>
      
      <!-- Move to external SCRIPT-->            
      <script>
        function initMap() {
          var mapDiv = document.getElementById('map');
          var map = new google.maps.Map(mapDiv, {
            center: {lat: <%= @adventure.latitude %>, lng: <%= @adventure.longitude %>},
            zoom: 14
          });
          
          var marker = new google.maps.Marker({
              position: new google.maps.LatLng(<%= @adventure.latitude %>, <%= @adventure.longitude %>),
              title: '<%= @adventure.activity_name%>'
          });
          
          marker.setMap(map);
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?callback=initMap"
          async defer></script>
  
</div>

	