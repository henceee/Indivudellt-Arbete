<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"> <%= link_to "Your Listing", adventures_path,class: "sidebar-link" %> </li>
            <li class="sidebar-item"> <%= link_to "Your Reservation", your_reservations_path, class: "sidebar-link" %></li>
            <li class="sidebar-item"> <%= link_to "Your Adventures", your_adventures_path, class: "sidebar-link active" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Your Adventures
            </div>
            <div class="panel-body">
                <% if !@adventures.nil? %>
                <% @adventures.each do |adventure| %>
                <div class="row">
                 <div class="col-md-2">
                     <%= adventure.date.strftime('%D') %> 
                     <div class="row">
                         <%= adventure.start_time.strftime('%H:%M') %>-<%= adventure.end_time.strftime('%H:%M') %>    
                     </div>
                     
                 </div>
                 <div class="col-md-6">
                     <%= link_to adventure_path(adventure.adventure) do %>                     
                         <%= image_tag adventure.adventure.photos[0].image.url(:thumb) if adventure.adventure.photos.length > 0 %>
                     <% end %>
                 </div>
                 <div class="col-md-2">
                     <%= link_to user_path(adventure.adventure.user) do %>  
                         <%= image_tag avatar_url(adventure.adventure.user), class:"img-circle avatar-medium" %>
                     <% end %>
                 </div>
                 <div class="col-md-2 right">
                     <h4><%= adventure.price%><%= adventure.adventure.currency%></h4>
                 </div>
                </div>  
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>